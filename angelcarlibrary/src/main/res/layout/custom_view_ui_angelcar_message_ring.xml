<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ViewStub
        android:layout_gravity="center_horizontal"
        android:id="@+id/stub_dateTime"
        android:inflatedId="@+id/layout_view_date_time"
        android:layout="@layout/view_date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom|right"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="2dp"
        android:orientation="horizontal" >
        <!--android:padding="5dp"-->

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/custom_view_ui_angelcar_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"
                android:background="@drawable/message_item_call_me"
                android:gravity="right"
                android:orientation="horizontal"
                android:padding="2dp">

                <TextView
                    android:id="@+id/custom_view_ui_angelcar_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="HiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHiHi"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

            </LinearLayout>

            <com.github.siyamed.shapeimageview.RoundedImageView
                android:visibility="gone"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"
                android:id="@+id/custom_view_ui_angelcar_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:siRadius="4dp"/>

        </FrameLayout>

        <com.github.siyamed.shapeimageview.CircularImageView
            android:id="@+id/custom_view_ui_angelcar_icon_profile"
            android:layout_width="32dp"
            android:layout_height="32dp" />

    </LinearLayout>





</LinearLayout>