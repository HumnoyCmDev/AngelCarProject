<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:minWidth="1000dp"
    android:minHeight="100dp">

    <!--<android.support.v7.widget.CardView-->
        <!--app:cardElevation="10dp"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content">-->



    <TextView
        android:id="@+id/title_evidence"
        android:textStyle="italic"
        android:textColor="#ffffff"
        android:background="@drawable/shape_text_status_wait"
        android:gravity="center_vertical"
        android:text="@string/evidence_dealers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

       <com.dollarandtrump.angelcar.view.RecyclerGridAutoFit
           android:layout_marginTop="8dp"
           android:id="@+id/recycler_evidence"
           android:numColumns="auto_fit"
           android:columnWidth="100dp"
           android:padding="10dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"/>

    <!--</android.support.v7.widget.CardView>-->

    <Button
        android:id="@+id/button_close"
        android:background="@drawable/selector_menu_bottom"
        android:text="@string/close"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>