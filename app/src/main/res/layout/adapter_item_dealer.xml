<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:background="@drawable/selector_overlay"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.dollarandtrump.angelcar.view.PhotoThumb
            android:id="@+id/image_shop"
            android:src="@drawable/icon_logo"
            android:layout_width="64dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginLeft="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_shop_name"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/ic_shop_black"
                android:drawablePadding="8dp"
                android:padding="4dp"
                android:text="[ShopName]"
                android:ellipsize="end"
                android:maxLines="1"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/text_count_car"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_car_count_black"
                    android:drawablePadding="8dp"
                    android:padding="4dp"
                    android:text="[CountCar]"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/text_view"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_count_view_post"
                    android:drawablePadding="8dp"
                    android:padding="4dp"
                    android:text="[VIEW/FOLLOW]"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"  />
            </LinearLayout>

           <!-- <View
                android:background="@color/colorHintDark"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>-->

        </LinearLayout>

    </LinearLayout>

</FrameLayout>