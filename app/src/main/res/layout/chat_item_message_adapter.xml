<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/padding_5dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.github.siyamed.shapeimageview.CircularImageView
        android:id="@+id/chat_item_message_image"
        android:layout_width="@dimen/image_profile_size"
        android:layout_height="@dimen/image_profile_size"
        android:src="@drawable/ic_hndeveloper"
        app:siBorderWidth="1dp" />

    <LinearLayout
        android:padding="@dimen/padding_5dp"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:text="humnoy developer"
            android:textSize="@dimen/chat_item_message_display_name_font_size"
            android:id="@+id/chat_item_message_dis_play_name"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold" />

        <TextView
            android:padding="3dp"
            android:textSize="@dimen/chat_item_message_message_font_size"
            android:text="testttttttttttttttttt"
            android:singleLine="true"
            android:ellipsize="end"
            android:id="@+id/chat_item_message_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:padding="@dimen/padding_5dp"
        android:text="10:50"
        android:id="@+id/chat_item_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>