<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    tools:context="com.dollarandtrump.angelcar.activity.ShopActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:fitsSystemWindows="true"
            app:title=" "
            android:id="@+id/collapsingToolbarLayout"
            app:contentScrim="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:fitsSystemWindows="true"
                    app:layout_collapseMode="parallax"
                    android:id="@+id/imageShopBackground"
                    android:scaleType="fitXY"
                    android:src="@drawable/sample_bg_shop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_gravity="bottom"
                    android:layout_margin="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_weight="0.6"
                        android:layout_width="0dp"
                        android:layout_height="50dp"/>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerHeaderShop"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="55dp"/>

                </LinearLayout>

                <TextView
                    android:layout_gravity="right"
                    android:textStyle="bold"
                    android:id="@+id/tvViewShop"
                    android:layout_margin="5dp"
                    android:textColor="@android:color/black"
                    android:text="200 view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/shopUploadImage"
                    android:clickable="true"
                    android:drawableLeft="@drawable/ic_camera_black"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:textColor="@android:color/black"
                    android:text="อัพโหลดรูปปก"
                    android:background="@drawable/bg_alpha_upload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </FrameLayout>

        </android.support.design.widget.CollapsingToolbarLayout>


    </android.support.design.widget.AppBarLayout>


    <LinearLayout
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:padding="5dp"
            android:background="@color/colorDarkItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_centerHorizontal="true"
                android:textSize="15sp"
                android:textStyle="bold"
                android:id="@+id/tvShopName"
                android:textColor="@android:color/white"
                android:text="CEO CLS Development"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:background="@drawable/shape_bg_user_id"
                android:layout_below="@id/tvShopName"
                android:layout_centerHorizontal="true"
                android:textSize="13sp"
                android:textStyle="bold"
                android:id="@+id/tvShopNumber"
                android:textColor="@android:color/black"
                android:text="581 - 959 - 004"
                android:layout_width="147dp"
                android:layout_height="24dp"/>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_below="@id/tvShopNumber"
                android:layout_centerHorizontal="true"
                android:textSize="15sp"
                android:textStyle="bold"
                android:id="@+id/tvShopDescription"
                android:textColor="@android:color/white"
                android:text="รถมือสองสสสส"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <com.dollarandtrump.angelcar.view.ListHashTag
            android:id="@+id/listHashTag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#9B9B9B" />

        <TextView
            android:layout_gravity="center"
            android:textSize="14sp"
            android:textColor="#4A4A4A"
            android:text="เลือกดูรถตามแบรนได้จากเมนูด้านบน"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <com.dollarandtrump.angelcar.view.snappy.SnappyRecyclerView
            android:visibility="gone"
            android:id="@+id/snappy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_car"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    </LinearLayout>



        <com.github.siyamed.shapeimageview.CircularImageView
            app:layout_anchor="@id/appBarLayout"
            app:layout_anchorGravity="left|bottom"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_hndeveloper"
            android:id="@+id/pictureShopProfile"
            android:layout_width="64dp"
            android:layout_height="64dp"
            app:siBorderWidth="1dp"/>


    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/menu_fab"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        app:menu_icon="@drawable/ic_setting"
        app:menu_colorNormal="@color/colorFAbButton"
        app:menu_colorPressed="@color/colorDarkItem"
        app:menu_labels_ellipsize="end"
        app:menu_labels_singleLine="true"
        app:menu_backgroundColor="#ccffffff"
        app:menu_labels_position="left">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_editShop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_post_mini"
            app:fab_colorNormal="@color/colorPrimary"
            app:fab_colorPressed="@color/colorDarkItem"
            app:fab_size="mini"
            app:fab_label="แก้ไขข้อมูล" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_upLoadCover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_shop_upload"
            app:fab_colorNormal="@color/colorPrimary"
            app:fab_colorPressed="@color/colorDarkItem"
            app:fab_size="mini"
            app:fab_label="อัพโหลดรูปหน้าปก" />

        <com.github.clans.fab.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_camera"
            app:fab_colorNormal="@color/colorPrimary"
            app:fab_colorPressed="@color/colorDarkItem"
            app:fab_size="mini"
            app:fab_label="เปลี่ยนรูปโปลไฟล์" />

    </com.github.clans.fab.FloatingActionMenu>


</android.support.design.widget.CoordinatorLayout>
