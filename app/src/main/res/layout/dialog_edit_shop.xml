<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:minWidth="1000dp"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            app:cardElevation="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <com.github.siyamed.shapeimageview.CircularImageView
                    android:id="@+id/shopProfileImage"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/ic_hndeveloper"
                    app:siBorderWidth="1dp" />


                <TextView
                    android:id="@+id/tv_button_upload_image"
                    android:padding="3dp"
                    android:drawableLeft="@drawable/ic_camera_black"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:background="@drawable/shape_bg_button_shop"
                    android:layout_marginTop="5dp"
                    android:text="เปลี่ยนรูป"
                    android:textColor="@android:color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"/>


                <!--<EditText
                    android:gravity="center"
                    android:maxLength="20"
                    android:layout_marginTop="10dp"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:id="@+id/editShopName"
                    android:textColor="@android:color/black"
                    android:text="CEO CLS Development"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"/>-->


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Space
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_name"
                        android:layout_marginTop="10dp"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <EditText
                            android:inputType="text"
                            android:maxLines="1"
                            android:maxLength="20"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:id="@+id/editShopName"
                            android:textColor="@android:color/black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Name" />
                    </android.support.design.widget.TextInputLayout>

                    <Space
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>



                <TextView
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:background="@drawable/shape_bg_user_id"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:id="@+id/text_view_shop_number"
                    android:textColor="@android:color/black"
                    android:text="581 - 959 - 004"
                    android:layout_width="147dp"
                    android:layout_height="24dp"/>

                <!--<EditText
                    android:gravity="center"
                    android:maxLength="20"
                    android:layout_marginTop="5dp"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:id="@+id/editShopDescription"
                    android:textColor="@android:color/black"
                    android:text="รถมือสองสสสส"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"/>-->

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Space
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_shop"
                        android:layout_marginTop="10dp"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <EditText
                            android:inputType="text"
                            android:maxLines="1"
                            android:maxLength="20"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:id="@+id/editShopDescription"
                            android:textColor="@android:color/black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Description" />
                    </android.support.design.widget.TextInputLayout>

                    <Space
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/btnSaveShop"
            android:background="@drawable/selector_menu_bottom"
            android:text="Save"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>





</ScrollView>