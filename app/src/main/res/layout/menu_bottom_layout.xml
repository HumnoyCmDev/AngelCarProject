<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#FDF1C0"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/menu_bottom_follow"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/ic_tab_follow" />

    <ImageView
        android:id="@+id/menu_bottom_message"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/ic_tab_mail" />


    <ImageView
        android:id="@+id/menu_bottom_list_shop"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/ic_tab_shop" />


    <ImageView
        android:id="@+id/menu_bottom_help"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/ic_tab_help" />


    <ImageView
        android:id="@+id/menu_bottom_feedback"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/ic_tab_sug" />

</LinearLayout>