<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.dollarandtrump.angelcar.banner.ImageBanner
        android:id="@+id/detailImage"
        android:layout_width="match_parent"
        android:layout_height="207dp"
        app:bb_barColor="#88000000"
        app:bb_delay="2"
        app:bb_period="10"
        app:bb_scale="0.5625"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvTopicCar"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"
                android:layout_marginBottom="9dp"
                android:textColor="@android:color/holo_red_light"
                android:freezesText="true"
                android:background="@drawable/shape_rectangle_bg_topic"
                android:padding="10dp"
                android:gravity="center"
                android:text="Toyota fortuner 1.2v ปี 2016"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16sp"
                    android:gravity="right"
                    android:text="เกียร์ :"
                    android:layout_weight="0.4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tvGear"
                    android:layout_marginLeft="13dp"
                    android:textSize="16sp"
                    android:text="เกียร์ธรรมดา"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="3dp"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16sp"
                    android:gravity="right"
                    android:text="Topic :"
                    android:layout_weight="0.4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tvTopic"
                    android:layout_marginLeft="13dp"
                    android:textSize="16sp"
                    android:text="รถขับน้อย วิ่งน้อย"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="3dp"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16sp"
                    android:gravity="right"
                    android:text="รายละเอียด :"
                    android:layout_weight="0.4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tvDetail"
                    android:layout_marginLeft="13dp"
                    android:textSize="16sp"
                    android:text="รถขับน้อย วิ่งน้อย 1 หมื่นกิโล สนใจติดต่อมาได้"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="3dp"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16sp"
                    android:gravity="right"
                    android:text="ชื่อ-สกุล :"
                    android:layout_weight="0.4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tvName"
                    android:layout_marginLeft="13dp"
                    android:textSize="16sp"
                    android:text="นายอรรถพล เรืองสา"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="3dp"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16sp"
                    android:gravity="right"
                    android:text="ที่อยู่ :"
                    android:layout_weight="0.4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_marginLeft="13dp"
                    android:textSize="16sp"
                    android:text="63 ม.5 ต. xxx จ.xxx 3100"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="3dp"
                android:gravity="center_vertical"
                android:background="@drawable/shape_rectangle_bg_topic"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16sp"
                    android:gravity="right"
                    android:text="โทร. :"
                    android:layout_weight="0.4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tvPhone"
                    android:layout_marginLeft="13dp"
                    android:textSize="16sp"
                    android:text="080-168-9720"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/buttonPhone"
                    android:src="@drawable/list_ic_phone"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />

            </LinearLayout>

            <!--<View-->
                <!--android:layout_marginTop="10dp"-->
                <!--android:id="@+id/divider"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="1dp"-->
                <!--android:background="?android:attr/listDivider" />-->
            <!---->


        </LinearLayout>
    </ScrollView>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/buttonEdit"
            android:textColor="@android:color/white"
            android:layout_margin="5dp"
            android:background="@drawable/selector_menu_bottom"
            android:text="แก้ไข"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="45dp" />

        <Button
            android:id="@+id/buttonClose"
            android:textColor="@android:color/white"
            android:layout_margin="5dp"
            android:background="@drawable/selector_menu_bottom"
            android:text="ปิด"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="45dp" />
    </LinearLayout>

</LinearLayout>