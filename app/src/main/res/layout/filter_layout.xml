<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_view_filter"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="10dp"
        android:gravity="center_horizontal"
        android:background="@android:color/black"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_view_brand"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:text="@string/all"
        android:layout_margin="2dp"
        android:background="@drawable/background_filter_brand"
        android:layout_width="wrap_content"
        android:layout_height="38dp" />

    <TextView
        android:id="@+id/text_view_sub"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:text="@string/all"
        android:layout_margin="2dp"
        android:background="@drawable/background_filter_brand_sub"
        android:layout_width="wrap_content"
        android:layout_height="38dp" />

    <TextView
        android:id="@+id/text_view_sub_detail"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:text="@string/all"
        android:layout_margin="2dp"
        android:background="@drawable/background_filter_brand_sub2"
        android:layout_width="wrap_content"
        android:layout_height="38dp" />

    <TextView
        android:id="@+id/text_view_year"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:text="@string/all"
        android:layout_margin="2dp"
        android:background="@drawable/background_filter_year"
        android:layout_width="wrap_content"
        android:layout_height="38dp" />

    <EditText
        android:id="@+id/edit_text_price_start"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:inputType="number"
        android:maxLength="7"
        android:textColorHint="@color/colorHint"
        android:background="@drawable/background_filter_price_start"
        android:hint="ราคาเริ่มต้น"
        android:layout_margin="2dp"
        android:layout_width="wrap_content"
        android:layout_height="38dp" />

    <EditText
        android:id="@+id/edit_text_price_end"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:inputType="number"
        android:maxLength="7"
        android:textColorHint="@color/colorHint"
        android:background="@drawable/background_filter_price_end"
        android:hint="ถึง"
        android:layout_margin="2dp"
        android:layout_width="wrap_content"
        android:layout_height="38dp" />

    <!--<ToggleButton-->
        <!--android:id="@+id/filterToggleGear"-->
        <!--android:checked="false"-->
        <!--android:text=""-->
        <!--android:textOff=""-->
        <!--android:textOn=""-->
        <!--android:padding="5dp"-->
        <!--android:background="@drawable/selector_gear_toggle_button"-->
        <!--android:layout_width="74dp"-->
        <!--android:layout_height="36dp" />-->

        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_gear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioGroup
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/radioGearAll"
                    android:checked="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textColor="@android:color/white"
                    android:text="ALL"
                    android:buttonTint="@color/colorHint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <RadioButton
                    android:id="@+id/radioGearAt"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textColor="@android:color/white"
                    android:text="AT"
                    android:buttonTint="@color/colorHint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <RadioButton
                    android:id="@+id/radioGearMt"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textColor="@android:color/white"
                    android:text="MT"
                    android:buttonTint="@color/colorHint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RadioGroup>

        </LinearLayout>

    <TextView
        android:id="@+id/buttonSearch"
        android:layout_marginTop="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:text="ค้นหา"
        android:textSize="20sp"
        android:background="@drawable/corner_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>