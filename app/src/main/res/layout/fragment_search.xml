<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <!--<TextView-->
                <!--android:textColor="@color/colorHintDark"-->
                <!--android:layout_marginBottom="10dp"-->
                <!--android:gravity="center"-->
                <!--android:text="เลือกกรองบางอย่างได้"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content" />-->

            <LinearLayout
                android:id="@+id/group_filter_brand"
                style="@style/group_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textColor="@android:color/black"
                    android:drawablePadding="6dp"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_car_count_black_18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/filter_padding_text"
                    android:text="ยี่ห้อรถ"
                    android:id="@+id/textView" />

                <TextView
                    android:textColor="@android:color/black"
                    android:id="@+id/text_brand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:padding="@dimen/filter_padding_text"
                    android:text="@string/filter_all" />
            </LinearLayout>

            <View
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/colorHintSearch"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:id="@+id/group_filter_sub"
                style="@style/group_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textColor="@android:color/black"
                    android:drawablePadding="6dp"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_add_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/filter_padding_text"
                    android:text="รุ่น" />

                <TextView
                    android:textColor="@android:color/black"
                    android:id="@+id/text_sub"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:padding="@dimen/filter_padding_text"
                    android:text="@string/filter_all" />
            </LinearLayout>

            <View
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/colorHintSearch"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:id="@+id/group_filter_sub_detail"
                style="@style/group_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textColor="@android:color/black"
                    android:drawablePadding="6dp"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_add_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/filter_padding_text"
                    android:text="รุ่นย่อย" />

                <TextView
                    android:textColor="@android:color/black"
                    android:id="@+id/text_sub_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:padding="@dimen/filter_padding_text"
                    android:text="@string/filter_all" />
            </LinearLayout>

            <View
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/colorHintSearch"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:id="@+id/group_filter_year"
                style="@style/group_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textColor="@android:color/black"
                    android:drawablePadding="6dp"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_calendar_black_18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/filter_padding_text"
                    android:text="ปี" />

                <TextView
                    android:textColor="@android:color/black"
                    android:id="@+id/text_year"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:padding="@dimen/filter_padding_text"
                    android:text="@string/filter_all" />
            </LinearLayout>

            <View
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/colorHintSearch"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:id="@+id/group_filter_price"
                style="@style/group_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:drawablePadding="6dp"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_price_black_18dp"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/filter_padding_text"
                    android:text="ราคา" />

                <TextView
                    android:textColor="@android:color/black"
                    android:id="@+id/text_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:padding="@dimen/filter_padding_text"
                    android:text="@string/filter_all" />
            </LinearLayout>

            <View
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/colorHintSearch"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:id="@+id/group_filter_gear"
                style="@style/group_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:drawablePadding="6dp"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_gear_black_18dp"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/filter_padding_text"
                    android:text="เกียร์" />

                <!--<TextView-->
                    <!--android:textColor="@android:color/black"-->
                    <!--android:textStyle="bold"-->
                    <!--android:id="@+id/text_gear"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:gravity="end"-->
                    <!--android:padding="@dimen/filter_padding_text"-->
                    <!--android:text="@string/filter_all" />-->

                <RadioGroup
                    android:id="@+id/group_radio_gear"
                    android:gravity="center|end"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/radioGearAll"
                        android:checked="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:textColor="@android:color/black"
                        android:text="ทั้งหมด"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <RadioButton
                        android:id="@+id/radioGearAt"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:textColor="@android:color/black"
                        android:text="ออโต้"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <RadioButton
                        android:id="@+id/radioGearMt"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:textColor="@android:color/black"
                        android:text="ธรรมดา"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RadioGroup>
            </LinearLayout>


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


    <Button
        android:id="@+id/button_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/selector_menu_bottom"
        android:text="ยืนยัน"
        android:textStyle="bold" />


</RelativeLayout>