<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="2dp"
    android:background="#ffffff"
    android:orientation="vertical">

    <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:orientation="vertical">-->

        <TextView
            android:id="@+id/custom_view_text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="[Time]"
            android:textSize="11sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/custom_view_icon_profile"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="bottom"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/message_item_car_detail_call_them"
                android:orientation="vertical">

                <com.dollarandtrump.angelcar.banner.ImageBanner
                    android:id="@+id/custom_view_imageBanner"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="5dp"
                    app:bb_barColor="#FFB13D"
                    app:bb_delay="2"
                    app:bb_period="10"
                    app:bb_scale="0.5625" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/custom_view_text_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:text="[Title]"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorAccent" />

                    <!--<LinearLayout-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginTop="5dp"-->
                        <!--android:orientation="horizontal">-->

                        <!--<ImageView-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:layout_marginTop="5dp"-->
                            <!--android:src="@drawable/ic_custom_header_car" />-->

                        <TextView
                            android:id="@+id/custom_view_text_brand"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:drawableLeft="@drawable/ic_custom_header_car"
                            android:drawablePadding="10dp"
                            android:gravity="center_vertical"
                            android:text="[Brand]"
                            android:textColor="@android:color/white"
                            android:textSize="13sp" />

                    <!--</LinearLayout>-->


                    <TextView
                        android:id="@+id/custom_view_text_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:drawableLeft="@drawable/ic_custom_header_profile"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:text="[Details]"
                        android:textColor="@android:color/white"
                        android:textSize="13sp" />

                    <!--<Button-->
                        <!--android:text="[ติดตาม]"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content" />-->

                    <TextView
                        android:id="@+id/text_follow"
                        android:clickable="true"
                        android:layout_gravity="center"
                        android:background="@drawable/shape_button_gallery_normal"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:text="@string/follow"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:drawablePadding="10dp"
                        android:drawableLeft="@drawable/ic_follow_on"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/group_chat_me"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.widget.Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
            <TextView
                android:background="@drawable/message_item_call_me"
                android:id="@+id/custom_view_cell_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[Text]"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_margin="2dp"
                android:src="@drawable/ic_bank_kk"
                android:layout_width="24dp"
                android:layout_height="24dp" />
            <ImageView
                android:layout_margin="2dp"
                android:src="@drawable/ic_bank_ks"
                android:layout_width="24dp"
                android:layout_height="24dp" />
            <ImageView
                android:layout_margin="2dp"
                android:src="@drawable/ic_bank_scb"
                android:layout_width="24dp"
                android:layout_height="24dp" />
            <ImageView
                android:layout_margin="2dp"
                android:src="@drawable/ic_bank_th"
                android:layout_width="24dp"
                android:layout_height="24dp" />
            <ImageView
                android:layout_margin="2dp"
                android:src="@drawable/ic_bank_tisco"
                android:layout_width="24dp"
                android:layout_height="24dp" />
        </LinearLayout>

        <TextView
            android:textColor="@color/colorHintDark"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:id="@+id/custom_view_item_title"
            android:layout_gravity="center"
            android:text="[ส่งข้อความถึงเจ้าของรถ]"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <!--</LinearLayout>-->

